@page
@model FunOlympic1.Pages.Videos.VideoPlayModel
@inject SignInManager<IdentityUser> signInManager
@{
    ViewData["Title"] = "Playing Now";
}

	<div class="row">
                        <div class="col-md-2"></div>
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-body">
                                    @if (signInManager.IsSignedIn(User))
                                        {

<div class="embed-responsive embed-responsive-16by9 img-fluid pt-1">
<iframe class= "img-fluid" width="560" height="315" src="@Model.VideoLink" title="FunOlympic video player" 
frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; 
gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>

}else{
                    
                    <p>Please <a href="https://localhost:7196/Identity/Account/Login" style="color="red;">Login</a> to view Live.</p>
                }
            </div>
        </div>
                        </div>

                    <div class="col-md-2"></div>
                    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
