@page
@model IndexModel
@inject SignInManager<IdentityUser> signInManager;

@{
    ViewData["Title"] = "Home page";
}

<div id="demo" class="carousel slide " data-bs-ride="carousel" style="height:600px; width:100%">

  <!-- Indicators/dots -->
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
    <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
    <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
  </div>
  
  <!-- The slideshow/carousel -->
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://th.bing.com/th/id/R.ce2bd082baf0266edb7d0845ac9531a0?rik=JFqByQBUUeGG5g&pid=ImgRaw&r=0" alt="Los Angeles" class="d-block" style="height:600px; width:100%">
      <div class="carousel-caption">
        <h3>Previous Tokyo Olympic 2020</h3>
        <p>Opening ceremony at Tokyo's Olympic Stadium.</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="https://www.teamusa.org/-/media/TeamUSA/Speedskating/Group/pursuitpodium_021522_Carousel_1440x810_Updated.png";Crop,size=(560,315),gravity=Center" alt="Chicago" class="d-block" style="height:600px;  width:100%">
      <div class="carousel-caption">
        <h3>Winners</h3>
        <p>U.S. MEN SECURE BRONZE IN OLYMPIC SPEEDSKATING TEAM PURSUIT</p>
      </div> 
    </div>
    <div class="carousel-item">
      <img src="https://s.abcnews.com/images/Sports/jamaica-100m-track-tokyo-olympics-01-rt-llr-210731_1627747921935_hpMain_16x9_992.jpg" alt="New York" class="d-block" style="height:600px; width:100%">
      <div class="carousel-caption">
        <h3>World Record!</h3>
        <p>Jamaica sweeps women's 100m at Tokyo Olympics as Elaine Thompson-Herah sets record</p>
      </div>  
    </div>
  </div>
  
  <!-- Left and right controls/icons -->
  <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
    <span class="carousel-control-next-icon"></span>
  </button>
</div>

<div class="container mt-3" > <h3>Highlights</h3>
<div class="row pb-3">
@foreach (var item in Model.Video)
{
        <div class = "col-lg-3 col-md-6 mb-4 ">


            <div class = "col-12 p1" style="border:1px solid #008cba; border-radius:5px;" > 



                <div class="card">

                    @if (signInManager.IsSignedIn(User))
                    {
                        <a class="btn" data-toggle="tooltip" data-placement="top" title="Play" asp-page="/Videos/VideoPlay" asp-route-id="@item.VideoLink">
                            <img src="@item.ThumbnailLink" class="card-img-top rounded " style="height:180px"  />

                            <div class= "p-1" style="height:100px">
                                <p class="Card-title h5 text-primary">@item.VideoTitle</p>
                                <p class="Card-title text-secondary text-light">@item.PublishDate</p>
                            </div>
                            <div class="p-0">
                                <p class="card-title text-primary fw-bold">@item.Category</p>    
                            </div>
                            </a>
                            
                            @*            <a class = "btn btn-primary" asp-page="/Privacy">Play</a>
                            *@            
                    }
                    else
                    {<div class="text-danger">
                        <p>Please <a href="https://localhost:7196/Identity/Account/Login" style="color="red;">Login</a> to view this Video.</p>
                        </div>
                        <a class="btn"asp-area="Identity" asp-page="/Account/Register">
                            <img src="@item.ThumbnailLink" class="card-img-top rounded " style="height:180px"  />
                            <div class= "p-1" style="height:100px">
                                <p class="Card-title h5 text-primary">@item.VideoTitle</p>
                                <p class="Card-title text-secondary text-light">@item.PublishDate</p>
                            </div>
                            <div class="p-0">
                                <p class="card-title text-primary fw-bold">@item.Category</p>    
                            </div>
                            </a>
                        @*<a class="btn" asp-area="Identity" asp-page="/Account/Register"asp-route-id="@item.VideoLink"></a>*@

                    }

                    </div>
                
            </div>
   
    </div>
    
}
</div>
</div>
