@page
@model FunOlympic1.LiveVideoModel
@inject SignInManager<IdentityUser> signInManager
@{
	<div class="pt-3 pb-2 " style="text-decoration-color:#012DC4">  
	<h3><ins> Live Games of Olympic</ins> </h3>
    </div>

	<div class="row">
                        <div class="col-md-2"></div>
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-body">
                                    @if (signInManager.IsSignedIn(User))
                                        {
                        
                          <iframe width="100%" height="515" src="https://www.youtube.com/embed/XM7vyKUWXsY" title="FunOlympic Games" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                            
                }else{
                    
                    <p>Please <a href="https://localhost:7196/Identity/Account/Login" style="color="red;">Login</a> to view Live.</p>
                }
            </div>
        </div>
                        </div>

                    <div class="col-md-2"></div>
                    </div>




